#/bin/bash

RC_FILES_TO_CHECK=( .screenrc .bashrc .vimrc .gvimrc )

for rcfile in ${RC_FILES_TO_CHECK[@]}
do
    if [ -e $HOME/$rcfile ] 
        then
            echo "Removing $rcfile"
            rm $HOME/$rcfile
            echo "   Creating symbolic link to ${rcfile:1} in $HOME/$rcfile"
            ln -s `pwd`/${rcfile:1} $HOME/$rcfile
            echo -e "\n--------------------------------------------------\n"
    fi
done

# vim:filetype=sh
