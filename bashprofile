# Exports
export TERM='xterm-256color'
export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/home/fractalis/.cabal/bin:/home/fractalis/.cabal/bin

# Aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

if [ -x /usr/bin/dircolors ]; then
	alias grep='grep --color=auto'
	alias ls='ls --color=auto'
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'
fi

# git
alias gc='git clone'

